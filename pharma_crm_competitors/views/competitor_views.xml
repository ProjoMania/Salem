<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="form_view_competitors">
            <field name="name">Competitors Form View</field>
            <field name="model">competitors</field>
            <field name="arch" type="xml">
                <form string="Competitors Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_price"/>
                        </group>
                        <notebook>
                            <page string="Images">
                                <field name="image_ids" mode="kanban">
                                    <kanban>
                                        <field name="image" widget="image"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="col-3 oe_kanban_global_click">
                                                    <div class="o_kanban_image" style="width:100%;height:100%;">
                                                        <img alt="Image" t-att-src="kanban_image('competitors.images', 'image', record.id.raw_value)" />
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="form_view_competitors_images">
            <field name="name">Competitors Images Form View</field>
            <field name="model">competitors.images</field>
            <field name="arch" type="xml">
                <form string="Competitors Image Form">
                    <sheet>
                        <group>
                            <field name="image" widget="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record model="ir.ui.view" id="list_view_competitors">
            <field name="name">Competitors List View</field>
            <field name="model">competitors</field>
            <field name="arch" type="xml">
                <tree string="Competitors List">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_price"/>
                </tree>
            </field>
        </record>

        <!-- Actions -->
        <record model="ir.actions.act_window" id="pharma_crm_competitors.action_competitors">
            <field name="name">Competitors</field>
            <field name="res_model">competitors</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menus -->
        <menuitem name="Competitors" id="pharma_crm_competitors.main_menu_competitors" parent="crm.crm_menu_sales" action="pharma_crm_competitors.action_competitors"/>
    </data>
</odoo>
