<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="form_view_customer_classification">
            <field name="name">Customer Classification Form View</field>
            <field name="model">customer.classification</field>
            <field name="arch" type="xml">
                <form string="Customer Classification Form">
                    <sheet>
                        <group>
                        <field name="name"/>
                        <field name="contact_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record model="ir.ui.view" id="list_view_customer_classification">
            <field name="name">Customer Classification List View</field>
            <field name="model">customer.classification</field>
            <field name="arch" type="xml">
                <tree string="Customer Classification List">
                        <field name="name"/>
                        <field name="contact_id"/>
                </tree>
            </field>
        </record>

        <!-- Actions -->
        <record model="ir.actions.act_window" id="pharma_crm_competitors.action_customer_classification">
            <field name="name">Customer Classification</field>
            <field name="res_model">customer.classification</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menus -->
        <menuitem name="Customer Class" id="pharma_crm_competitors.main_menu_customer_classification" parent="crm.crm_menu_config" action="pharma_crm_competitors.action_customer_classification"/>

    </data>
</odoo>
