<odoo>
    <data>
        <record model="ir.ui.view" id="doc_list_view">
            <field name="name">Documents list</field>
            <field name="model">doc.doc</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="doc_type_id"/>
                    <field name="url" widget="url" invisible="not is_url_document"/>
                    <field name="document_file" invisible="not is_file_document"/>
                    <field name="is_file_document" invisible="1"/>
                    <field name="is_url_document" invisible="1"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="doc_form_view">
            <field name="name">Documents Form</field>
            <field name="model">doc.doc</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_reviewed" type="object" string="Approved"
                                class="oe_highlight"
                                invisible="is_reviewed or (not document_file and not url)"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="doc_type_id" class="oe_edit_only"/>
                            <h1>
                                <field name="doc_type_id" placeholder="Document Name" readonly="is_reviewed"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_file_document" readonly="is_reviewed"/>
                                <field name="document_file" invisible="not is_file_document" filename="file_name"
                                       readonly="is_reviewed" widget="binary"/>
                                <field name="is_url_document" readonly="is_reviewed"/>
                                <field name="url" widget="CopyClipboardURL" invisible="not is_url_document"
                                       readonly="is_reviewed"/>
                                <field name="file_name" invisible="1"/>
                                <field name="is_reviewed" invisible="1"/>
                                <field name="date_deadline" readonly="is_reviewed"/>
                                <field name="date_done" readonly="1"/>
                            </group>
                            <group>
                                <field name="uploaded_by" readonly="1"/>
                                <field name="assigned_to" readonly="is_reviewed"/>
                                <field name="validated_by" readonly="1"/>
                                <field name="uploaded_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="description" string="Description">
                                <field name="description" readonly="is_reviewed"/>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_doc">
            <field name="name">Documents</field>
            <field name="res_model">doc.doc</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="SDT" id="menu_root" web_icon="shipment_document_tracking,static/menu.png"/>

        <menuitem name="Documents Checklist" id="menu_doc" parent="menu_root"
                  action="action_doc" sequence="20"/>

    </data>
</odoo>
