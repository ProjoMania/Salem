<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record model="ir.ui.view" id="sale_order_line_view">
        <field name="name">sale.order.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="action_approve" type="object" string="Quantity Approval"
                invisible="state in ['draft', 'sent', 'sale', 'pending']" groups="pharma_sales_rep.group_supervisor, pharma_sales_rep.group_manager"/>
            </xpath>
        </field>
    </record>

</odoo>