<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="auto_send_so_report" model="ir.cron">
        <field name="name">Generate Sale Report and Send to Users Daily</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_sale_order"/>
        <field name="code">model._send_daily_so_report()</field>
        <field name="state">code</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
    </record>
</odoo>