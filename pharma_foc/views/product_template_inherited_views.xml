<odoo>
    <data>
    
        <!-- Form View -->
        <record model="ir.ui.view" id="pharma_foc.product_template_inherited_form_view">
            <field name="name">Product Inherited Form View</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="FOC">
                        <field name="foc_product_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="percentage"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <header>
                </header>
            </field>
        </record>

        <record id="view_product_product_supplier_inherit_pharma" model="ir.ui.view">
            <field name="name">product.product.form.pharma</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="FOC">
                        <field name="foc_product_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="percentage"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
