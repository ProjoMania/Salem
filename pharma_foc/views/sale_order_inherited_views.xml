<odoo>
    <data>
    
        <!-- Form View -->
        <record model="ir.ui.view" id="pharma_foc.sale_order_inherited_form_view">
            <field name="name">Sale Order Inherited Form View</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_subtotal']" position="after">
                    <button name="add_foc_product" string="Add FOC Product" class="btn btn-primary" type="object"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
