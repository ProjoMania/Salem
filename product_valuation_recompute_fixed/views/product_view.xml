<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_form_recompute_button_fixed" model="ir.ui.view">
        <field name="name">product.product.recompute.button.fixed</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_recompute_valuation"
                        string="Recompute Valuation"
                        type="object"
                        class="btn-primary"
                        groups="stock.group_stock_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
