<odoo>

    <record model="ir.ui.view" id="account_invoice_form">
        <field name="name">Account Invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <div class="float-end d-flex gap-1 mb-2 ms-1"
                     name="so_button_below_invoice_line_ids">
                    <button string="Discount"
                            name="action_open_invoice_discount_wizard"
                            type="object"
                            class="btn btn-secondary"
                            groups="product.group_discount_per_so_line"/>
                </div>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_approve_invoice_discount" type="object" string="Approval for Discount"
                 groups="pharma_sales_rep.group_supervisor, pharma_sales_rep.group_manager"
                invisible="is_discount"/>
                <field name="is_discount" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='discount'][1]" position="replace">
                <field name="discount" string="Disc.%" groups="product.group_discount_per_so_line"/>
            </xpath>
        </field>
    </record>

</odoo>