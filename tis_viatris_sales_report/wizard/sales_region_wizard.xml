<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_viatris_sales_report_form" model="ir.ui.view">
            <field name="name">view.viatris.sales.report.wizard</field>
            <field name="model">viatris.sales.report</field>
            <field name="arch" type="xml">
                <form string="Viatris Sales Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_category_id"/>
                                <field name="customer_id" widget="many2many_tags"/>
                            </group>
                            <group></group>

                            <group>
                                        <field name="from_date" required="True"/>
                            </group>

                            <group>
                                        <field name="to_date" required="True"/>

                            </group>
                        </group>
                        <footer>
                            <button string="Print" name="print_button" type="object" class="btn-primary"
                                    data-hotkey="q"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>