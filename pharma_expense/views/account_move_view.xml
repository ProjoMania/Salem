<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_view_inherit_expense" model="ir.ui.view">
        <field name="name">account.move.form.inherit.expense</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="show_hr_expense" class="oe_stat_button" icon="fa-money" invisible="state not in ['posted']">
                    <field name="expense_count" widget="statinfo" string="Expenses"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>

