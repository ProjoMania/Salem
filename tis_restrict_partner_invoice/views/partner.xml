<?xml version="1.8" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_invoice_block" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//group[@name='accounting_entries']" position="after">
                        <group>

                        </group>
                        <group>

                            <group><field name="is_due_date_block" groups="tis_restrict_partner_invoice.group_restrict_partner_invoice"/></group><br/>
                            <group><field name="due_date_period" attrs="{'invisible':[('is_due_date_block', '=', False)]}" /></group>
                            <group><span attrs="{'invisible':[('is_due_date_block', '=', False)]}">Days</span></group>

                        </group>


                    </xpath>
            </field>
        </record>
    </data>
</odoo>