<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_sale_order_form_view" model="ir.ui.view">
        <field name="name">sh.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                <field name="sh_is_secondary_unit" column_invisible="1" />
                <field name="category_id" column_invisible="1" groups="sh_secondary_unit.group_secondary_unit_sale" />
                <field name="sh_sec_qty" force_save="1" readonly="not sh_is_secondary_unit" required="sh_is_secondary_unit" groups="sh_secondary_unit.group_secondary_unit_sale" />
                <field name="computed_uom" widget="many2many_tags" column_invisible="1" />
                <field
                    name="sh_sec_uom"
                    force_save="1"
                    readonly="not sh_is_secondary_unit" required="sh_is_secondary_unit"
                    domain="[('id','in', computed_uom)]"
                    groups="sh_secondary_unit.group_secondary_unit_sale"
                />
                
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="product_uom_domain" column_invisible="1"/>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom']" position="before">
                <field name="product_uom_domain" invisible="1"/>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/kanban" position="inside" optional="1">
                <field name="product_uom_domain" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
