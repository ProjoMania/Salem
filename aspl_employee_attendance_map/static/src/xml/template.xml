<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="aspl_employee_attendance_map.public_kiosk_greetings" t-inherit="hr_attendance.public_kiosk_greetings" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_hr_attendance_button_dismiss')]" position="before">
            <t t-if='widget.attendance.location_name != false'>
               <b>Location : </b><t t-esc="this.attendance.location_name"/><br/>
            </t>
            <t t-if="widget.attendance.os_name != false">
                <b>Operating System : </b><t t-esc="this.attendance.os_name"/><br/>
            </t>
            <t t-if='widget.attendance.browser_name != false'>
                <b>Browser : </b><t t-esc="this.attendance.browser_name"/><br/>
            </t>
        </xpath>
    </t>
</templates>

