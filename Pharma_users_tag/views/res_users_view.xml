<odoo>
    <data>
        <record id="res_user_inherit" model="ir.ui.view">
            <field name="name">res.users.inheit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref ="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//page[@name='security']" position="after">
                    <page name = 'Tags'>
                        <group>
                            <field name="partner_category_id" widget="many2many_tags"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
