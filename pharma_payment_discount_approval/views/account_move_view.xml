<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="show_discount_button" invisible="1"/>
                <button name="approve_discount" string="Payment Discount Approval" type="object" class="oe_highlight"
                invisible="not show_discount_button"/>
            </xpath>
        </field>
    </record>


</odoo>