<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_payment_inherit" model="ir.ui.view">
        <field name="name">res.users.form.payment.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='Others']" position="inside">
                <group string="Payment Discount">
<!--                    <field name="max_payment_disc"/>-->
                    <field name="disc_payment_type" widget="radio"/>
                    <field name="max_payment_disc_amt" invisible="disc_payment_type != 'fix_amount'"/>
                    <field name="max_payment_disc_pt" invisible="disc_payment_type != 'percentage'"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>