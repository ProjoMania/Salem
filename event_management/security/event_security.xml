<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="group_event_project_owner" model="res.groups">
            <field name="name">Project Owner</field>
            <field name="implied_ids" eval="[(4, ref('event.group_event_user'))]"/>
        </record>

        <record id="group_event_project_manager" model="res.groups">
            <field name="name">Project Manager</field>
            <field name="implied_ids" eval="[(4, ref('event.group_event_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="ir_rule_event_event_project_user" model="ir.rule">
            <field name="name">Event: Project User</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="domain_force">['|',('user_id', '=', user.id), ('project_manager_id.user_id','=',user.id)]</field>
        </record>

    </data>
</odoo>