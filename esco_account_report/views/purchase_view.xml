<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_inherit_esco" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="payment_type_id" options="{'no_create': True, 'no_open': True}"/>
                <field name="condition_term_id" options="{'no_create': True, 'no_open': True}"/>
                <field name="shipping_data_id" options="{'no_create': True, 'no_open': True}"/>
                <field name="delivery_date"/>
            </field>
<!--            <group name="planning" position="replace">-->
<!--                <group name="planning">-->
<!--                </group>-->
<!--            </group>-->
            <field name="company_id" position="after">
                <field name="validated_by_id" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                <field name="date_planned"/>
            </field>
        </field>
    </record>

</odoo>

