<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="contacts.action_contacts" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="context">{'default_is_company': True, 'filter_partner': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Contact in your address book
                </p>
                <p>
                    Odoo helps you track all activities related to your contacts.
                </p>
            </field>
        </record>

        <record id="res_partner_inherit" model="ir.ui.view">
            <field name="name">res.partner.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="supervision_id"/>
                </xpath>

                <xpath expr="//sheet" position="before">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="approve_btn" string="Approve" type="object" class="btn-primary"
                                invisible="supervision_id != uid or state == 'approved'"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>



