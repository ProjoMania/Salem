<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_quant_tree_expiration_date_inherit" model="ir.ui.view">
        <field name="name">view.stock.quant.tree.expiration.date.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
        	<field name='lot_id' position='after'>
        		<field name='life_date_format'/>
        	</field>
        </field>
    </record>

    <record id="quant_search_view_expiration_date_inherit" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <filter name="Lot_Serial_number" position="after">
                <filter string='Expiration Date' name="expiration_date" context="{'group_by': 'life_date'}"/>
            </filter>
        </field>
    </record>

</odoo>
