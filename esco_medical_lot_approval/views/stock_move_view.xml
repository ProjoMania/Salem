<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_move_line_detailed_operation_tree_inherit_medical" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">lot_state == 'rejected'</attribute>
                <attribute name="decoration-muted">lot_state == 'progress'</attribute>
                <attribute name="decoration-success">lot_state == 'Released'</attribute>
            </xpath>
            <field name="product_uom_id" position="after">
                <field name="lot_state" invisible="1"/>
            </field>
            <field name="lot_id" position="attributes">
                <attribute name="context">{'default_product_id': product_id, 'default_company_id': company_id, 'active_picking_id': picking_id, 'only_approved': True}</attribute>
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree_inherit_medical" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <field name="lot_id" position="attributes">
                <attribute name="context">{'active_picking_id': picking_id, 'default_company_id': parent.company_id,
                    'default_product_id': parent.product_id, 'only_approved': True}</attribute>
            </field>
        </field>
    </record>

</odoo>
