<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="stock_picking_form_inherit_report_date">
            <field name="name">stock.picking.form.inherit.report.date</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='origin']" position="after">
                    <field name="report_date"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_tree_inherit_report_date">
            <field name="name">stock.picking.tree.inherit.report.date</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='name']" position="after">
                    <field name="report_date"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
