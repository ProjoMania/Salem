<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_form_inherit_report_date">
            <field name="name">sale.order.form.inherit.report.date</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='date_order']" position="after">
                    <field name="is_report_date" invisible=" is_match_inv_date"/>
                    <field name="is_match_inv_date" invisible="is_report_date"/>
                    <field name="is_report_date1_invisible" invisible="1"/>
                    <field name="report_date" invisible="not is_report_date1_invisible"   />
                    <field name="report_date1" invisible="is_report_date1_invisible"  required="is_report_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
