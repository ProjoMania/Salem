<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="liq_location_tree_view" model="ir.ui.view">
        <field name="name">liq.location.tree.view</field>
        <field name="model">liquidation.location</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="partner_id"/>
                <field name="location_id"/>
                <field name="liquidation_id"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>

    <record id="liq_location_form_view" model="ir.ui.view">
        <field name="name">liq.location.form.inherit</field>
        <field name="model">liquidation.location</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="location_id"/>
                            <field name="liquidation_id"/>
                            <field name="total_liq_qty"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="cust_qty"/>
                            <field name="liq_qty"/>
                            <button name="add_liquidation" type="object" string="Add Liquidation"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_liquidation" model="ir.actions.act_window">
        <field name="name">Liquidation</field>
        <field name="res_model">liquidation.location</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_liquidation" name="Liquidation"
              action="action_liquidation"/>
</odoo>