<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_location_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.location.form.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='usage']" position="before">
                <field name="min_qty"/>
                <field name="max_qty"/>
                <field name="sales_rep"/>
            </xpath>
            <xpath expr="//field[@name='cyclic_inventory_frequency']" position="before">
                <field name="is_liquidation"/>
                <field name="is_drug"/>
            </xpath>
            <xpath expr="//sheet" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>