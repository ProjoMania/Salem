<odoo>
    <data>
        <record model="ir.ui.view" id="shipment_doc_tracking_list_view">
            <field name="name">Documents tracking list</field>
            <field name="model">shipment.doc.tracking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="done_date"/>
                    <field name="deadline"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="shipment_doc_tracking_form_view">
            <field name="name">Documents tracking Form</field>
            <field name="model">shipment.doc.tracking</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="reset_to_draft" string="Reset to Draft" type="object" class="oe_highlight"
                                invisible="status in ('draft', 'complete')"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                                invisible="status != 'draft'"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="status not in ('draft', 'partial')"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,partial,complete"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="TN." readonly="1"/>
                            </h1>
                        </div>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_source_purchase_orders" type="object"
                                    icon="fa-pencil-square-o"
                                    invisible="purchase_order_count == 0">
                                <field string="Purchases" name="purchase_order_count" widget="statinfo"/>
                            </button>
                            <button type="object" name="action_view_invoice" class="oe_stat_button"
                                    icon="fa-paper-plane-o"
                                    invisible="invoice_count == 0">
                                <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                                <field name="bill_ids" invisible="1"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="company_id"/>
                                <field name="done_date" readonly="1"/>
                                <field name="partner_ref" readonly="1"/>
                                <field name="airways_ref" readonly="1"/>
                            </group>
                            <group>
                                <field name="deadline"/>
                                <field name="bill_ids" widget="many2many_tags" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="documents" string="Documents">
                                <field name="doc_ids">
                                    <tree>
                                        <field name="doc_type_id" readonly="is_reviewed"/>
                                        <field name="description" readonly="is_reviewed"/>
                                        <field name="date_deadline" readonly="is_reviewed" string="Deadline"/>
                                        <field name="assigned_to" readonly="is_reviewed"/>
                                        <field name="is_file_document" readonly="is_reviewed" column_invisible="1"/>
                                        <field name="is_url_document" readonly="is_reviewed" column_invisible="1"/>
                                        <field name="document_file" invisible="not is_file_document"
                                               filename="file_name" readonly="is_reviewed" widget="binary"/>
                                        <field name="file_name" column_invisible="1"/>
                                        <field name="url" widget="url" invisible="not is_url_document"
                                               readonly="is_reviewed"/>
                                        <field name="uploaded_by" readonly="1"/>
                                        <field name="uploaded_date" readonly="1"/>
                                        <field name="is_reviewed" column_invisible="1"/>
                                        <button name="action_reviewed" type="object" string="Approved"
                                                class="oe_highlight"
                                                invisible="is_reviewed or (not document_file and not url)"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_doc_tracking">
            <field name="name">Documents Tracking</field>
            <field name="res_model">shipment.doc.tracking</field>
            <field name="domain">[('company_id','in',context.get('allowed_company_ids'))]</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Documents Tracking" id="menu_shipment_doc_tracking" parent="menu_root"
                  action="action_doc_tracking"/>

    </data>
</odoo>
