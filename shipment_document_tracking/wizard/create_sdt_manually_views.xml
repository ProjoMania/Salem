<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_create_sdt_manually_wizard" model="ir.ui.view">
            <field name="name">create.sdt.manually.wizard</field>
            <field name="model">create.sdt.manually</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="po_id" invisible="1"/>
                                <field name="creation_type" widget="radio"/>
                            </group>
                            <group></group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirm"
                                data-hotkey="q"
                                name="action_apply"
                                type="object"
                                class="print btn-primary">
                        </button>
                        <button string="Cancel"
                                data-hotkey="x"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_sdt_manually" model="ir.actions.act_window">
            <field name="name">Create SDT Manually</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.sdt.manually</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_po_id': active_id}</field>
        </record>

    </data>
</odoo>