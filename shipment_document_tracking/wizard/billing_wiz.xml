<odoo>
    <data>
        <record id="billing_wiz_form" model="ir.ui.view">
            <field name="name">purchase.billing.wiz.form</field>
            <field name="model">purchase.billing.wiz</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="type" widget="radio"/>
                            </group>
                            <group>
                                <field name="tracking_id" invisible="type != 'exist'"/>
                                <field name="po_id" invisible="1"/>
                                <field name="partner_id" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirm"
                                data-hotkey="q"
                                name="action_apply"
                                type="object"
                                class="print btn-primary">
                        </button>
                        <button string="Cancel"
                                data-hotkey="x"
                                special="cancel"
                                class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="billing_wiz_action" model="ir.actions.act_window">
            <field name="name">Tracking Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.billing.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
    </data>
</odoo>