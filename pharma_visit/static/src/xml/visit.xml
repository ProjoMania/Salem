<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PharmaVisitTemplate" t-inherit="web.FormView" t-inherit-mode="extension">
            <xpath expr="//t[@t-set-slot='layout-buttons']" position="inside">
                    <t t-if="props.resModel == 'pharma.visit'">
                        <button type="button" class="btn btn-primary" data-hotkey="i"
                                t-on-click="onClickGpsLocation">
                            Get Location
                        </button>
                    </t>
            </xpath>
    </t>

</templates>
