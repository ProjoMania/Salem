<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.visit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_type" invisible="1"/>
                <field name="visit_classification_id" invisible="not is_type"/>
                <field name="speciality_id" invisible="not is_type"/>
                <field name="sub_speciality_id" options="{'no_create': True}" domain="[('speciality_id', '=', speciality_id)]" invisible="not is_type"/>
                <field name="brik_id" invisible="is_type"/>
            </xpath>
        </field>
    </record>
</odoo>