<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="weekly_plan_tree_view" model="ir.ui.view">
        <field name="name">weekly.plan.tree.view</field>
        <field name="model">weekly.plan</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="partner_id" required="True"/>
                <field name="date"/>
                <field name="area"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="weekly_plan_form_view" model="ir.ui.view">
        <field name="name">weekly.plan.form.view</field>
        <field name="model">weekly.plan</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" required="True"/>
                            <field name="date"/>
                            <field name="area"/>
                            <field name="description"/>
                        </group>
<!--                                                <group>-->
<!--                                                </group>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_weekly_plan_visit" model="ir.actions.act_window">
        <field name="name">Weekly Plan</field>
        <field name="res_model">weekly.plan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="submenu_weekly_plan" name="Weekly Plan" action="action_weekly_plan_visit" parent="main_menu_visit"/>
</odoo>