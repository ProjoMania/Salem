<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_classification_tree_view" model="ir.ui.view">
        <field name="name">doctor.classification.tree.view</field>
        <field name="model">doctor.classification</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="doctor_classification_form_view" model="ir.ui.view">
        <field name="name">doctor.classification.form.view</field>
        <field name="model">doctor.classification</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                    </group>
                </sheet>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                    <field name="message_ids" widget="mail_thread"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <record id="action_classify" model="ir.actions.act_window">
        <field name="name">Classification</field>
        <field name="res_model">doctor.classification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_classify" name="Doctor Classification" action="action_classify" parent="main_menu_visit"/>
</odoo>