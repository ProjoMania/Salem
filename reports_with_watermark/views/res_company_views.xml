<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_res_comapny" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <field name="watermark"/>
                <field name="watermark_option" invisible="not watermark" required="watermark"/>
                <field name="upload_image" widget="image" class="oe_left oe_avatar" invisible="watermark_option != 'backgroundimage'" accept=".png"/>
                <field name="rotate_image" invisible="watermark_option != 'name'"/>
                <field name="rotate_angle" invisible="not rotate_image or watermark_option in ['logo', 'backgroundimage']" required="rotate_image"/>
                <field name="font_size" invisible="watermark_option != 'name'"/>
                <field name="font_color" widget="color" invisible="watermark_option != 'name'"/> placeholder="rgb" />
                <field name="footer_image" widget="image" class="oe_left oe_avatar" accept=".png"/>
                <field name="header_image" widget="image" class="oe_left oe_avatar" accept=".png"/>
            </xpath>
        </field>
    </record>
</odoo>
