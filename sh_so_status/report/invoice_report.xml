<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Report -->
    <template id="sh_so_status_invoice_report" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mt40 mb40" id="so_status">
                <div class="col-auto">
                    <strong>Payment Status : </strong>
                    <t t-foreach="request.env['sale.order'].sudo().search([('name', '=', o.invoice_origin)])" t-as="sale_record">
                    <t t-if="sale_record.sh_fully_paid"><p class="badge badge-success">Fully Paid</p></t>
                    <t t-elif="sale_record.sh_partially_paid"><p class="badge badge-warning">Partially Paid</p></t>
                    <t t-else=""><p class="badge badge-danger">Not Defined</p></t>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
