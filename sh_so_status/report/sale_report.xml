<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Report -->
    <template id="sh_so_status_sale_order_report" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']" position="after">
            <div class="row mt40 mb40" id="so_status">
                <div class="col-auto">
                    <strong>Delivery Status : </strong>
                    <t t-if="doc.sh_fully_delivered"><p class="badge badge-success">Fully Delivered</p></t>
                    <t t-elif="doc.sh_partially_delivered"><p class="badge badge-warning">Partially Delivered</p></t>
                    <t t-else=""><p class="badge badge-danger">Not Defined</p></t>
                </div>
                <div class="col-auto">
                    <strong>Payment Status : </strong>
                    <t t-if="doc.sh_fully_paid"><p class="badge badge-success">Fully Paid</p></t>
                    <t t-elif="doc.sh_partially_paid"><p class="badge badge-warning">Partially Paid</p></t>
                    <t t-else=""><p class="badge badge-danger">Not Defined</p></t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
