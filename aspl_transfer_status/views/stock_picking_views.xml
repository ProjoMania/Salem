<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_picking_form_view_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="is_close" invisible="1" groups="aspl_transfer_status.group_warehouse_keeper"/>
                    <field name="transfer_status_id" attrs="{'readonly': [('is_close', '=', True)]}"
                           groups="aspl_transfer_status.group_warehouse_keeper"/>
                    <field name="required_attachment" readonly="1"
                           groups="aspl_transfer_status.group_warehouse_keeper"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Attachments" name="attachments" groups="aspl_transfer_status.group_warehouse_keeper">
                        <field name="attachment_ids" widget="one2many"
                               groups="aspl_transfer_status.group_warehouse_keeper">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="date"/>
                                <field name="file_url"/>
                                <field name="file"/>
                                <button type="object" name="download_attachment" class="oe_highlight" icon="fa-download"
                                        attrs="{'invisible': [('file', '=', False)]}"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="view_picking_internal_search_inherit_stock_picking" model="ir.ui.view">
            <field name="name">stock.picking.search</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <!--                    <field name="transfer_status_id" string="Transfer Status"/>-->
                    <!--                    <filter name="transfer_status_id" string="Transfer Status" domain="[()]"/>-->
                    <filter string="Transfer Status" name="transfer_status_id" domain="[]"
                            context="{'group_by': 'transfer_status_id'}" groups="aspl_transfer_status.group_warehouse_keeper"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>