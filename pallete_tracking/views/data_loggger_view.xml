<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form_inherit_data_logger_package" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.data.logger.package</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quant_ids']" position="after">
                <separator string="Data Logger"/>
                <field name="logger_id">
                </field>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_form_inherit_data_logger_package" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.data.logger.package</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                    <field name="driver_name"/>
                    <field name="vehicle_no"/>
                    <field name="pallet_no"/>
                    <field name="arrived_date"/>
                    <field name="vehicle_temp"/>
                    <field name="vehicle_cleanliness"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_form_inherit_data_logger" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.data.logger</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='result_package_id']" position="after">
                <field name="data_logger" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_data_logger_view">
        <field name="context">{}</field>
        <field name="name">Data Logger</field>
        <field name="res_model">data.logger</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new package
            </p>
            <p>
                Packages are usually created via transfers (during pack operation) and can contain different products.
                Once created, the whole package can be moved at once, or products can be unpacked and moved as single
                units again.
            </p>
        </field>
    </record>

    <menuitem id="menu_logger" name="Data Logger" parent="stock.menu_stock_inventory_control"
              action="action_data_logger_view" sequence="102"/>

</odoo>
